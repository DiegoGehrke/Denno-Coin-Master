<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232227"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linear_root"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#232227"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="24dp">

                <LinearLayout
                    android:id="@+id/linear2"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="16dp"
                    android:background="#232227"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <LinearLayout
                        android:id="@+id/support1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start|center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/backic1"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_weight="0"
                            android:contentDescription="@string/back"
                            android:scaleType="center"
                            app:srcCompat="@drawable/backic" />

                        <TextView
                            android:id="@+id/thegmname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:fontFamily="@font/calistobold"
                            android:text="@string/memory_game"
                            android:textColor="#FFFFFF"
                            android:textSize="24sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#232227"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@font/flareserif"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="@string/seconds_left"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />

                    <ProgressBar
                        android:id="@+id/timerProgress2"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="288dp"
                        android:layout_height="8dp"
                        android:layout_marginBottom="24dp"
                        android:indeterminate="false"
                        android:max="60"
                        android:progress="60"
                        android:progressDrawable="@drawable/custom_progress_bg" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/card1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="4dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/card_back" />

                    <ImageView
                        android:id="@+id/card2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="2dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/card_back" />

                    <ImageView
                        android:id="@+id/card3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="2dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/card_back" />

                    <ImageView
                        android:id="@+id/card4"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="4dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/card_back" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/card5"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="4dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/card_back" />

                    <ImageView
                        android:id="@+id/card6"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="2dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/card_back" />

                    <ImageView
                        android:id="@+id/card7"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="2dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/card_back" />

                    <ImageView
                        android:id="@+id/card8"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="4dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/card_back" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/card9"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="4dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/card_back" />

                    <ImageView
                        android:id="@+id/card10"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="2dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/card_back" />

                    <ImageView
                        android:id="@+id/card11"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="2dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/card_back" />

                    <ImageView
                        android:id="@+id/card12"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="4dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/card_back" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear7"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/card13"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="4dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/card_back" />

                    <ImageView
                        android:id="@+id/card14"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="2dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/card_back" />

                    <ImageView
                        android:id="@+id/card15"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="2dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/card_back" />

                    <ImageView
                        android:id="@+id/card16"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="4dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/card_back" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/thewhatchadbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/linear_likebtn"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/whatchadtxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/calistobold"
                        android:gravity="center_horizontal|center_vertical"
                        android:letterSpacing="0.04"
                        android:text="@string/watch_a_ad_to_play_once"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/button_start"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="32dp"
                    android:background="@drawable/linear_likebtn"
                    android:gravity="top|center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/startgm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/calistobold"
                        android:gravity="center_horizontal|center_vertical"
                        android:letterSpacing="0.04"
                        android:text="@string/start_game"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
