<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232227"
    android:backgroundTint="#232227"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    tools:context=".login">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="72dp"
                android:layout_marginBottom="48dp"
                android:fontFamily="@font/calistobold"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/log_in_with_e_mail"
                android:textColor="#FFFFFF"
                android:textSize="28sp" />

            <EditText
                android:id="@+id/editTextTextEmailAddress2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:autofillHints=""
                android:background="@drawable/inputlayout"
                android:ems="10"
                android:fontFamily="@font/flareserif"
                android:hint="@string/type_your_e_mail_address"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:padding="8dp"
                android:textColor="#272727"
                android:textColorHint="#FF535353"
                tools:ignore="TextContrastCheck" />

            <EditText
                android:id="@+id/editTextTextPassword3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:autofillHints=""
                android:background="@drawable/inputlayout"
                android:ems="10"
                android:fontFamily="@font/flareserif"
                android:hint="@string/type_your_password"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:padding="8dp"
                android:textColor="#272727"
                android:textColorHint="#FF535353"
                tools:ignore="TextContrastCheck" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal|left"
                android:layout_marginStart="64dp"
                android:layout_marginEnd="64dp"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/flareserif"
                android:gravity="center|left"
                android:paddingLeft="156dp"
                android:paddingRight="156dp"
                android:text="@string/forgot_your_password"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/login_btn"
                android:layout_width="288dp"
                android:layout_height="60dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/linear_likebtn"
                android:gravity="center_horizontal|top|center_vertical"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/txt_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/flareserif"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/log_in"
                    android:textColor="#EDEDED"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/signup_btn"
                android:layout_width="288dp"
                android:layout_height="60dp"
                android:layout_marginBottom="234dp"
                android:background="@drawable/linear_outlinelikebtn"
                android:gravity="center_horizontal|top|center_vertical"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/txt_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/flareserif"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/sign_up"
                    android:textColor="#EDEDED"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>