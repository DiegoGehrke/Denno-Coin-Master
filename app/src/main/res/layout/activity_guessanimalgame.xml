<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bgjogo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232227"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="24dp"
    tools:context=".guessanimalgame">

    <LinearLayout
        android:id="@+id/supoteh"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="center"
            app:srcCompat="@drawable/backic" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/calistobold"
            android:text="@string/guess_the_animal"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/suportetempo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_secs_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/flareserif"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/seconds_left"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <ProgressBar
            android:id="@+id/progresso123"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="288dp"
            android:layout_height="8dp"
            android:layout_marginBottom="24dp"
            android:indeterminate="false"
            android:max="30"
            android:progress="30"
            android:progressDrawable="@drawable/custom_progress_bg" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/suporteimagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:alpha="0.5"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mostrarAnimais"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_hen" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/suportechutes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/primeirosbotoes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:alpha="0.5"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/primeiroBotao"
                android:layout_width="144dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bnt_guess_animal"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingTop="4dp">

                <TextView
                    android:id="@+id/nome1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/flareserif"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/galo"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/segundobotao"
                android:layout_width="144dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/bnt_guess_animal"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingTop="4dp">

                <TextView
                    android:id="@+id/nome2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/flareserif"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/galinha"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/outrosbotoes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/terceirobotao"
                android:layout_width="144dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bnt_guess_animal"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingTop="4dp">

                <TextView
                    android:id="@+id/nome3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/flareserif"
                    android:text="@string/peru"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/quartobotao"
                android:layout_width="144dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/bnt_guess_animal"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingTop="4dp">

                <TextView
                    android:id="@+id/nome4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/flareserif"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/pÃ¡ssaro"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/unlock123"
        android:layout_width="288dp"
        android:layout_height="60dp"
        android:background="@drawable/linear_likebtn"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/txtwatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/calistobold"
            android:text="@string/watch_an_ad_to_play"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>