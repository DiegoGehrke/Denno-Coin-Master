<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/botBg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222227"
    android:backgroundTint="#222227"
    android:orientation="vertical"
    android:paddingTop="24dp"
    tools:context=".configs"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backicone"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="0"
            android:scaleType="center"
            app:srcCompat="@drawable/backictest" />

        <TextView
            android:id="@+id/activity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:fontFamily="@font/calistobold"
            android:text="@string/configurations"
            android:textColor="#FFFFFF"
            android:textSize="44sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/payment_config"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="24dp"
        android:layout_weight="0"
        android:background="@drawable/testlines"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <ImageView
            android:id="@+id/ic_pay_config"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:srcCompat="@drawable/big_ic_wallet" />

        <TextView
            android:id="@+id/txt_set_up_payment_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/flareserif"
            android:text="@string/set_up_a_payment_method"
            android:textColor="#FFFFFF"
            android:textSize="34sp" />

        <ImageView
            android:id="@+id/go_setup"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="0"
            android:contentDescription="@string/click_to_view_your_transaction_history"
            android:scaleType="center"
            app:srcCompat="@drawable/backictest1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/request_withdrawal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="24dp"
        android:layout_weight="0"
        android:background="@drawable/testlines"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <ImageView
            android:id="@+id/ic_withdraw_cash"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:srcCompat="@drawable/big_ic_withdraw" />

        <TextView
            android:id="@+id/txt_request_withdraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/flareserif"
            android:text="@string/request_withdrawal"
            android:textColor="#FFFFFF"
            android:textSize="34sp" />

        <ImageView
            android:id="@+id/go_withdraw"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="0"
            android:contentDescription="@string/click_to_view_your_transaction_history"
            android:scaleType="center"
            app:srcCompat="@drawable/backictest1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/referral_info"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="24dp"
        android:layout_weight="0"
        android:background="@drawable/testlines"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <ImageView
            android:id="@+id/show_ref"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:srcCompat="@drawable/big_ic_show_ref" />

        <TextView
            android:id="@+id/txt_show_referral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/flareserif"
            android:text="@string/show_referral_information"
            android:textColor="#FFFFFF"
            android:textSize="34sp" />

        <ImageView
            android:id="@+id/switch_onoff"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginRight="8dp"
            android:layout_weight="0"
            android:background="@drawable/big_switch_on"
            android:scaleType="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/denno_coin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="24dp"
        android:layout_weight="0"
        android:background="@drawable/testlines"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <ImageView
            android:id="@+id/ic_denno_coin"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:srcCompat="@drawable/big_denno_ic" />

        <TextView
            android:id="@+id/txt_show_coins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/flareserif"
            android:text="@string/show_denno_coins"
            android:textColor="#FFFFFF"
            android:textSize="34sp" />

        <ImageView
            android:id="@+id/switch_coin_onoff"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginRight="8dp"
            android:layout_weight="0"
            android:background="@drawable/ic_switch_on"
            android:scaleType="center" />

    </LinearLayout>

</LinearLayout>